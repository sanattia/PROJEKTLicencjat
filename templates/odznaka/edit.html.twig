{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_odznaka_edit'|trans({'%id%': odznaka.id|default('')}) }}
{% endblock %}

{% block body %}
    <div class="srodek">
        <h1>{{ 'title_odznaka_edit'|trans({'%id%': odznaka.id|default('')}) }}</h1>
        {{ form_start(form, { method: 'PUT', action: url('odznaka_edit', {id: odznaka.id}) }) }}
        {{ form_widget(form) }}
        <div class="form-group row float-sm-right">
            <input type="submit" value="{{ 'action_save'|trans }}" class="btn btn-primary" />
        </div>
        <div class="form-group row float-sm-left">
            <a href="{{ url('odznaka_index') }}" class="btn btn-link">
                {{ 'action_back_to_list'|trans }}
            </a>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}