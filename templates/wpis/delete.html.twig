{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Usuń wpis' }}
{% endblock %}

{% block body %}
    <div class="srodek">
    <h1>{{ 'Usuń wpis' }}</h1>
    {{ form_start(form, { method: 'DELETE', action: url('wpis_delete', {id: wpis.id}) }) }}
    {{ form_widget(form) }}
    <p>
        Czy na pewno chcesz usunąć rekord?
    </p>

    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action_save'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('wpis_index') }}" class="btn btn-link">
            {{ 'action_back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
    </div>
{% endblock %}