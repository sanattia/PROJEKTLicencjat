{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Edytuj wpis' }}
{% endblock %}

{% block body %}
    <div class="srodek">
    <h1>{{ 'Edytuj wpis' }}</h1>
    {{ form_start(form, { method: 'PUT', action: url('wpis_edit', {id: wpis.id}) }) }}

    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action_save'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('wpis_index') }}" class="btn btn-link">
            {{ 'action_back_to_list'|trans }}
        </a>
    </div>
    </div>
    {{ form_end(form) }}
{% endblock %}